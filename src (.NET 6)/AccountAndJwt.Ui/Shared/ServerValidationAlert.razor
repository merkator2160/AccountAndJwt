<Alert Color="Color.Danger" Visible="@(_modelState != null)" Dismisable>
    @if (_modelState?.Errors != null)
    {
        @foreach (var x in _modelState.Errors)
        {
            <AlertMessage Margin="Margin.Is4.FromBottom">@x.Key </AlertMessage>
            @foreach (var message in x.Value)
            {
                <br/>
                <AlertDescription>@message</AlertDescription>
            }
        }
    }
    <CloseButton Clicked="@OnCloseButtonClicked"/>
</Alert>